{
  "compilerOptions": {
    /* Linguagem */
    "target": "ES2020",                   // versão moderna de JS
    "module": "commonjs",                 // padrão para Node.js
    "lib": ["ES2020"],                    // bibliotecas JS inclusas
    "types": ["node", "express"],         // carrega tipagens principais

    /* Estrutura do projeto */
    "rootDir": "src",                     // onde está o código-fonte
    "outDir": "dist",                     // para onde vão os arquivos compilados
    "baseUrl": ".",                       // permite imports absolutos
    "resolveJsonModule": true,            // permite importar JSON

    /* Imports/Exports */
    "esModuleInterop": true,              // corrige imports padrão (import express from "express")
    "allowSyntheticDefaultImports": true, // mais compatibilidade
    "moduleResolution": "node",           // padrão do Node

    /* Qualidade de código */
    "strict": true,                       // ativa checagens estritas
    "skipLibCheck": true,                 // evita falsos positivos em libs
    "forceConsistentCasingInFileNames": true // previne problemas de case
  },
  "include": ["src"],                     // compila apenas pasta src
  "exclude": ["node_modules", "dist"]     // ignora essas pastas
}
